<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- JDBC Database connection settings -->
        <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
        <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/gafalag_db</property>
        <property name="hibernate.connection.username">docker</property>
        <property name="hibernate.connection.password">docker</property>
        <!-- Adds UTC time zone -->
        <property name="hibernate.jdbc.time_zone">UTC</property>
        <!-- JDBC connection pool settings ... using built-in test pool -->
        <property name="hibernate.connection.pool_size">1</property>
        <!-- Select our SQL dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL10Dialect</property>
        <!-- Echo the SQL to stdout -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.use_sql_comments">true</property>
        <!-- Set the current session context -->
        <property name="hibernate.current_session_context_class">thread</property>
        <!-- Update the database schema on startup -->
        <property name="hibernate.hbm2ddl.auto">update</property>
        <!-- dbcp connection pool configuration -->
        <property name="hibernate.dbcp.initialSize">5</property>
        <property name="hibernate.dbcp.maxTotal">20</property>
        <property name="hibernate.dbcp.maxIdle">10</property>
        <property name="hibernate.dbcp.minIdle">5</property>
        <property name="hibernate.dbcp.maxWaitMillis">-1</property>
        <!-- entities -->
        <mapping class="org.lekitech.gafalag.hibernate.entity.Category"/>
        <mapping class="org.lekitech.gafalag.hibernate.entity.Definition"/>
        <mapping class="org.lekitech.gafalag.hibernate.entity.DefinitionCategory"/>
        <mapping class="org.lekitech.gafalag.hibernate.entity.Dialect"/>
        <mapping class="org.lekitech.gafalag.hibernate.entity.Etymology"/>
        <mapping class="org.lekitech.gafalag.hibernate.entity.Expression"/>
        <mapping class="org.lekitech.gafalag.hibernate.entity.ExpressionRelation"/>
        <mapping class="org.lekitech.gafalag.hibernate.entity.Gender"/>
        <mapping class="org.lekitech.gafalag.hibernate.entity.Language"/>
        <mapping class="org.lekitech.gafalag.hibernate.entity.Mediafile"/>
        <mapping class="org.lekitech.gafalag.hibernate.entity.PartOfSpeech"/>
        <mapping class="org.lekitech.gafalag.hibernate.entity.RelationType"/>
        <mapping class="org.lekitech.gafalag.hibernate.entity.Source"/>
    </session-factory>
</hibernate-configuration>
